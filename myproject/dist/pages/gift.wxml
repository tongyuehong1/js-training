
  <view>
    <view class="text top">
      <text class="firstword">简单2步，选中心动好礼</text>
    </view>
    <view class="text">
      <view class="row text top1" style="width: 15rem;">
        <view class="cir text">
          <image class="pic" src="{{image.send}}"/>
        </view>
        <view class="text">
            <view class="line"/>
        </view>
        <view class="cir text">
          <image class="pic" src="{{image.like}}"/>
        </view>
        <view class="text">
            <view class="line"/>
        </view>
        <view class="cir text">
          <image class="pic" src="{{image.done}}"/>
        </view>
      </view>
    </view>
    <view class="distance1">
      <view class="text word row">
        <text>送给TA</text>
        <view class="text">
          <view class="line1"/>
        </view>
        <text>TA喜欢的</text>
        <view class="text">
          <view class="line1"/>
        </view>
        <text>完成</text>
      </view>
    </view>
    <view class="TA up">
      <text class="wordmar" bindtap="female" style="color: {{color.colorfemale}}; border-bottom:3px solid {{color.solidfemale}}">送她</text>
      <text class="wordmargin" bindtap="male" style="color: {{color.colormale}}; border-bottom:3px solid {{color.solidmale}}">送他</text>
    </view>
    <view class="row sixdistance avg">
      <view class="six text sixword">
        <image class="size" src="{{image.camera}}"/>
        <text>{{word.self}}</text>
      </view>
      <view class="six text sixword">
        <image class="size" src="{{image.ring}}"/>
        <text>{{word.couple}}</text>
      </view>
      <view class="six text sixword">
        <image class="size" src="{{image.lipstick}}"/>
        <text>{{word.friend}}</text>
      </view>
    </view>
    <view class="row sixdistance avg">
      <view class="six text sixword">
        <image class="size" src="{{image.flower}}"/>
        <text>{{word.parent}}</text>
      </view>
      <view class="six text sixword">
        <image class="size" src="{{image.tie}}"/>
        <text>{{word.elder}}</text>
      </view>
      <view class="six text sixword">
        <image class="size" src="{{image.bag}}"/>
        <text>{{word.partner}}</text>
      </view>
    </view>
    <view class="text word view">
      <text>先跳过，随便逛逛 ▶</text>
    </view>
  </view>